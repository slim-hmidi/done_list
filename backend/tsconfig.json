{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@services/*": ["services/*"],
      "@loaders/*": ["loaders/*"],
      "@@types/*": ["types/*"],
      "@validations/*": ["validations/*"],
      "@config/*": ["config/*"],
      "@api/*": ["api/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"]
    }
  }
}